{
  "name": "para-archive",
  "version": "1.0.2",
  "description": "Obsidian plugin for archiving files using the PARA method",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "npm run lint && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "prepare": "husky install",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^8.57.1",
    "eslint-plugin-obsidianmd": "^0.1.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "^4.9.5"
  }
}
